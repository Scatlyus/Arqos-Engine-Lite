{
  "name": "arqos-maestro-edition",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev:hub": "turbo run dev --filter=maestro-hub",
    "dev:api": "turbo run dev --filter=maestro-gateway",
    "dev:ui": "turbo run dev --filter=maestro-ui",
    "build": "turbo run build",
    "start": "node apps/maestro-hub/dist/index.js",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:int": "turbo run test:int",
    "test:e2e": "turbo run test:e2e",
    "test:contracts": "turbo run test:contracts",
    "test:load": "k6 run tests/load/p90.js",
    "test:ci": "npm run test:unit && npm run test:contracts && npm run test:int && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/jest": "^30.0.0",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "openapi-response-validator": "^12.1.3",
    "supertest": "^7.2.2",
    "testcontainers": "^11.11.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  }
}